<Window x:Class="SignalRChatWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SignalRChatWPF"
        xmlns:shared="clr-namespace:SignalRChat;assembly=SignalRChat"
        mc:Ignorable="d"
        Title="SignalR Chat Program" Height="450" Width="800">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*">
            </ColumnDefinition>
            <ColumnDefinition Width="5*">
            </ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="1*">
            </RowDefinition>
            <RowDefinition Height="12*">
            </RowDefinition>
            <RowDefinition Height="1*">
            </RowDefinition>
        </Grid.RowDefinitions>
        
        <!-- Left Section -->
        <Label Grid.Column="0">Users</Label>
        <ListBox ItemsSource="{Binding Users}" Grid.Column="0" Grid.Row="1" Grid.RowSpan="2"></ListBox>

        <!-- Right Section -->
        <Button Grid.Column="2">Login History</Button>
        <TextBlock Grid.Column="2" Grid.Row="1"></TextBlock>
        <ListBox ItemsSource="{Binding ChatLog}" Grid.Column="1" Grid.Row="0" Grid.RowSpan="2"></ListBox>
        <DockPanel Grid.Column="1" Grid.Row="2" VerticalAlignment="Center">
            <TextBox Style="{StaticResource ValidatingControl}" Text="{Binding ChatMessageToSend, Mode=TwoWay, ValidatesOnNotifyDataErrors=True}"></TextBox>
        </DockPanel>
        <Button Grid.Column="2" Grid.Row="2" Command="{Binding MessageCommand}">Send Message</Button>
        
    </Grid>
</Window>
